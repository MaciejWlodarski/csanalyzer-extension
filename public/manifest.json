{
  "manifest_version": 3,
  "name": "CSAnalyzer Extension",
  "version": "0.2.0",
  "version_name": "0.2.0-beta.2",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.faceit.com/*",
        "https://faceit.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "main.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "https://www.faceit.com/*",
        "https://faceit.com/*"
      ],
      "resources": [
        "inject.js",
        "assets/logo.svg",
        "assets/icon.svg",
        "assets/faceit.svg",
        "assets/steam.png"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
